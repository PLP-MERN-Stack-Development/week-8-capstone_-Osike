MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/sheriabot_prod

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_for_production_make_it_very_long_and_random
